pinMode(4, OUTPUT);
}

void loop() {

  if (digitalRead(button) == HIGH)
{

digitalWrite(3,LOW);
digitalWrite(4,LOW);
digitalWrite(2,HIGH);
delay(2000);
  }
  

 //LCD.setCursor (0,0);
 //LCD.print("dani is very cool");

 
digitalWrite(2,HIGH);
delay(8000);

digitalWrite(3,HIGH);
delay(800);

digitalWrite(2,LOW);
delay(0);
digitalWrite(3,LOW);
delay(400);


digitalWrite(4,HIGH);
delay(8000);
digitalWrite(3,HIGH);
delay(800);
digitalWrite(4,LOW);
delay(0);
digitalWrite(3,LOW);
delay(400);}




